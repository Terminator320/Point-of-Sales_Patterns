<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="paymentPane" prefHeight="804.0" prefWidth="1040.0" stylesheets="@payment.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.posapp.controller.PaymentController">
   <children>
       <fx:define>
           <ToggleGroup fx:id="tipGroup" />
       </fx:define>
       <HBox layoutX="355.0" layoutY="439.0" prefHeight="129.0" prefWidth="356.0" style="-fx-background-color: lightgrey; -fx-background-radius: 20; -fx-padding: 5;">
           <children>
               <AnchorPane prefHeight="116.0" prefWidth="89.0">
                   <children>
                       <RadioButton fx:id="radioButton10percent" layoutX="12.0" layoutY="14.0" onAction="#getTipPercentage" text="10%">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="tipGroup" />
                     </toggleGroup>
                     </RadioButton>
                       <Label fx:id="amount10PercentTip" layoutX="28.0" layoutY="49.0" text="Label">
                     <font>
                        <Font size="13.0" />
                     </font></Label>
                  <RadioButton fx:id="noTip" layoutX="10.0" layoutY="88.0" mnemonicParsing="false" onAction="#getTipPercentage" text="No thanks" toggleGroup="$tipGroup">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </RadioButton>
                   </children>
               </AnchorPane>

               <AnchorPane prefHeight="80.0" prefWidth="89.0">
                   <children>
                       <RadioButton fx:id="radioButton15percent" layoutX="13.0" layoutY="14.0" onAction="#getTipPercentage" text="15%" toggleGroup="$tipGroup">
                     <font>
                        <Font size="13.0" />
                     </font></RadioButton>
                       <Label fx:id="amount15PercentTip" layoutX="29.0" layoutY="49.0" text="Label">
                     <font>
                        <Font size="13.0" />
                     </font></Label>
                   </children>
               </AnchorPane>

               <AnchorPane prefHeight="80.0" prefWidth="89.0">
                   <children>
                       <RadioButton fx:id="radioButton20percent" layoutX="10.0" layoutY="14.0" onAction="#getTipPercentage" text="20%" toggleGroup="$tipGroup">
                     <font>
                        <Font size="13.0" />
                     </font></RadioButton>
                       <Label fx:id="amount20PercentTip" layoutX="26.0" layoutY="49.0" text="Label">
                     <font>
                        <Font size="13.0" />
                     </font></Label>
                   </children>
               </AnchorPane>

               <AnchorPane prefHeight="81.0" prefWidth="89.0">
                   <children>
                       <RadioButton fx:id="radioButtonCustom" layoutX="5.0" layoutY="14.0" onAction="#getTipPercentage" text="Custom" toggleGroup="$tipGroup">
                     <font>
                        <Font size="13.0" />
                     </font></RadioButton>

                       <TextField fx:id="customTipField" disable="true" layoutX="5.0" layoutY="42.0" onAction="#onCustomTipFieldAction" prefWidth="70.0" promptText="\$" style="-fx-background-color: white; -fx-background-radius: 20px;">
                     <font>
                        <Font size="13.0" />
                     </font></TextField>
                   </children>
               </AnchorPane>
           </children>
       </HBox>

       <Label fx:id="paymentTitle" layoutX="374.0" layoutY="26.0" text="How would you like to pay?" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="tipsTitle" layoutX="359.0" layoutY="385.0" text="Tips" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font></Label>
      <ListView fx:id="finalTotal" layoutX="362.0" layoutY="578.0" prefHeight="147.0" prefWidth="341.0" />
      <Button fx:id="payButton" layoutX="533.0" layoutY="740.0" mnemonicParsing="false" onAction="#OnPayAction" style="-fx-background-color: blue; -fx-text-fill: white; -fx-background-radius: 200px; -fx-padding: 5 15;" text="Pay Now">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" layoutX="434.0" layoutY="740.0" mnemonicParsing="false" onAction="#onCancelAction" prefHeight="37.0" prefWidth="87.0" style="-fx-background-radius: 20; -fx-padding: 5 15;" text="Cancel">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="cardDetailTitle" layoutX="359.0" layoutY="117.0" text="Card Details" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="choiceOfPayment" layoutX="359.0" layoutY="74.0" prefHeight="25.0" prefWidth="322.0" style="-fx-background-color: transparent; -fx-border-radius: 200px; -fx-border-style: solid; -fx-background-insets: 0 0 0 0, 0, 1, 2; -fx-border-color: white;" />
      <Separator layoutX="359.0" layoutY="152.0" prefHeight="19.0" prefWidth="322.0" />
      <Pane layoutX="339.0" layoutY="178.0" prefHeight="201.0" prefWidth="363.0">
         <children>
            <TextField fx:id="nameField" layoutX="22.0" layoutY="35.0" onAction="#onNameFieldAction" prefHeight="25.0" prefWidth="322.0" promptText="Name" style="-fx-padding: 5 0 5 15px; -fx-background-color: transparent; -fx-border-color: lightgrey; -fx-border-radius: 300px;" />
            <TextField fx:id="cardNumberField" layoutX="20.0" layoutY="102.0" onAction="#onCardNumFieldAction" prefHeight="25.0" prefWidth="322.0" promptText="Number" style="-fx-padding: 5 0 5 15px; -fx-background-color: transparent; -fx-border-color: lightgrey; -fx-border-radius: 300px;" />
            <TextField fx:id="threeDigitCardNumber" layoutX="232.0" layoutY="162.0" onAction="#onCVVFieldAction" prefHeight="25.0" prefWidth="110.0" promptText="e.g. 123" style="-fx-padding: 5 0 5 15px; -fx-background-color: transparent; -fx-border-color: lightgrey; -fx-border-radius: 300px;" />
            <Label layoutX="20.0" layoutY="8.0" text="Card Name:" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="232.0" layoutY="140.0" text="CVV:" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="20.0" layoutY="73.0" text="Card Number:" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="22.0" layoutY="140.0" text="Expiration Date:" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="selectMonthExpiration" layoutX="20.0" layoutY="162.0" onAction="#onExpirationDateAction" prefHeight="25.0" prefWidth="80.0" promptText="MM" style="-fx-background-radius: 10px;" />
            <ComboBox fx:id="selectYearExpiration" layoutX="122.0" layoutY="162.0" onAction="#onExpirationDateAction" prefHeight="25.0" prefWidth="80.0" promptText="YY" style="-fx-background-radius: 10px;" />
            <Label layoutX="108.0" layoutY="160.0" text="/">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Separator layoutX="359.0" layoutY="420.0" prefHeight="19.0" prefWidth="347.0" />
   </children>
</AnchorPane>
